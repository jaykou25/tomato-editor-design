{
  "include": ["src/", "declare.d.ts", "cypress/support/component.ts"],
  "compilerOptions": {
    "types": ["cypress"],
    "target": "ES2019",
    "baseUrl": ".",
    "jsx": "react",
    "moduleResolution": "Node",
    "lib": ["ES2015", "dom"],
    "paths": {
      "my-lib": ["./src"],
      "@jay.kou/tomato-editor-design": ["./src"]
    },
    "declaration": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "esModuleInterop": true
  }
}
